<?xml version="1.0"?>
<ruleset>
    <!-- display progress and sniff -->
    <arg value="p"/>
    <arg value="s"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- check the php syntax -->
    <rule ref="Generic.PHP.Syntax"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>

    <!-- Paths and file to check -->
    <file>src</file>
    <file>tests</file>

    <!-- exclude file, e.g. Cache -->
    <exclude-pattern>src/Common/FunctionTree/Resource/Cache</exclude-pattern>
</ruleset>
